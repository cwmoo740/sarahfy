{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "allowJs": false,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "./src",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [
    "./src/*",
    "./src/**/*"
  ]
}